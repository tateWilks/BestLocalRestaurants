@{
    ViewBag.Title = "Add New Restaurant";
}

@model BestLocalRestaurants.Models.RestaurantSuggestion

    <div class="container">
        <div class="container">
            <h1 class="display-4 text-center">Make a Suggestion</h1>
        </div>
        <div class="card" style="padding: 10px;">
            <form asp-controller="Home" asp-action="AddRest" method="post">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Name*</label>
                    <div class="col-sm-5">
                        <input class="form-control" type="text" asp-for="Name" placeholder="Enter First Name"/>@Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Restaurant Name*</label>
                    <div class="col-sm-5">
                        <input class="form-control" type="text" asp-for="RestaurantName" placeholder="Enter Restuarant Name"/>@Html.ValidationMessageFor(model => model.RestaurantName)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Favorite Dish</label>
                    <div class="col-sm-5">
                        <input class="form-control" type="text" asp-for="FavoriteDish" placeholder="Enter your favorite dish"/>@Html.ValidationMessageFor(model => model.FavoriteDish)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Phone Number*</label>
                    <div class="col-sm-5">
                        <input class="form-control" type="text" asp-for="PhoneNumber" placeholder="123-456-7890"/>@Html.ValidationMessageFor(model => model.PhoneNumber)
                    </div>
                </div>
                <input class="btn btn-light" type="submit" value="Enter Suggestion" />
            </form>
        </div>
    </div>